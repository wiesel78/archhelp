#Die folgenden Einstellungen gelten für alle Accounts:
defaults
tls on
tls_starttls on
tls_certcheck off
auth on
#auskommentieren, wenn gewünscht:
logfile ~/.msmtp.log

#Diese Einstellungen gelten für das Konto bei Googlemail:
account Google
host smtp.gmail.com
from wurst78@gmail.com
user wurst78@gmail.com
port 587
#password passwort

#Das Web.de-Konto soll das Standard-Konto werden:
account default: Google

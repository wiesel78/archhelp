#!/bin/zsh

sudo pacman -Rdds xf86-video-nouveau nouveau-dri mesa-libgl
sudo pacman -Rdds lib32-mesa-libgl lib32-nouveau-dri
sudo pacman -S nvidia-ck-core2 nvidia-utils nvidia-libgl
sudo pacman -S lib32-nvidia-utils lib32-nvidia-libgl

sudo sed -i 's/^MODULES="\(.*\)"/#MODULES="\1"/' /etc/mkinitcpio.conf

sudo mkinitcpio -p linux
sudo mkinitcpio -p linux-ck

#!/bin/zsh

sudo pacman -Rdds --noconfirm nvidia-ck-core2 nvidia-utils nvidia-libgl
sudo pacman -Rdds --noconfirm lib32-nvidia-utils lib32-nvidia-libgl
sudo pacman -S --noconfirm xf86-video-nouveau nouveau-dri mesa-libgl 
sudo pacman -S --noconfirm lib32-mesa-libgl lib32-nouveau-dri

sudo sed -i 's/^#MODULES="\(.*\)"/MODULES="\1"/' /etc/mkinitcpio.conf

sudo mkinitcpio -p linux
sudo mkinitcpio -p linux-ck
